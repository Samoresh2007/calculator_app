<Calculator>:
    orientation: 'vertical'

    TextInput:
        id: result
        text: ''
        halign: 'right'
        font_size: 32
        readonly: True

    GridLayout:
        cols: 4
        rows: 4
        spacing: 5
        padding: 5

        Button:
            text: '7'
            on_press: root.button_pressed(self.text)
        Button:
            text: '8'
            on_press: root.button_pressed(self.text)
        Button:
            text: '9'
            on_press: root.button_pressed(self.text)
        Button:
            text: '/'
            on_press: root.button_pressed(self.text)

        Button:
            text: '4'
            on_press: root.button_pressed(self.text)
        Button:
            text: '5'
            on_press: root.button_pressed(self.text)
        Button:
            text: '6'
            on_press: root.button_pressed(self.text)
        Button:
            text: '*'
            on_press: root.button_pressed(self.text)

        Button:
            text: '1'
            on_press: root.button_pressed(self.text)
        Button:
            text: '2'
            on_press: root.button_pressed(self.text)
        Button:
            text: '3'
            on_press: root.button_pressed(self.text)
        Button:
            text: '-'
            on_press: root.button_pressed(self.text)

        Button:
            text: '.'
            on_press: root.button_pressed(self.text)
        Button:
            text: '0'
            on_press: root.button_pressed(self.text)
        Button:
            text: 'C'
            on_press: root.clear_result()
        Button:
            text: '+'
            on_press: root.button_pressed(self.text)

    Button:
        text: '='
        size_hint_y: 0.2
        on_press: root.calculate_result()
